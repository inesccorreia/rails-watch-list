<div class="container">
  <div class="row justify-content-center">
  <div class="col-8">
    <h1>New Bookmark: </h1>
    <%= link_to "Back to 'All Lists'", lists_path %>
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.input :comment %>
      <%= f.association :movie %>
      <%= f.button :submit, class: "btn btn-primary"%>
    <% end %>

    </div>
  </div>
</div>
