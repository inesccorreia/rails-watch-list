<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <h1>New List: </h1>
        <%= simple_form_for (@list) do |f| %>
        <%= f.input :name %>
        <%= f.submit "Add to the list!", class: "btn btn-primary"  %>
      <% end %>
      <%= link_to "Back to 'All Lists'", lists_path, class: "mt-5 btn btn-primary text-decoration-none" %>
    </div>
  </div>

</div>
